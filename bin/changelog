#!/usr/bin/env php
<?php

// installed via composer?
$autoload = __DIR__.'/../../../autoload.php';

if (file_exists($autoload)) {
    $rootPath = __DIR__.'/../../../..';

    require_once $autoload;
} else {
    $rootPath = __DIR__.'/../';

    require_once __DIR__.'/../vendor/autoload.php';
}

$app = new \Logg\Application($rootPath);

$app->run();

